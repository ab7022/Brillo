// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int               @id @default(autoincrement())
  name               String
  email              String            @unique
  password           String?
  profile_url        String?
  premium_user       Boolean           @default(false)
  validity           DateTime?
  admin              Boolean           @default(false)
  createdAt          DateTime          @default(now())
  provider           String
  project            Project[]
  skill              Skill[]
  education          Education[]
  experience         Experience[]
  basicInfo          BasicInfo[]
  achievement        Achievement[]
  subscriptionPlan   SubscriptionPlan? @relation(fields: [subscriptionPlanId], references: [id])
  subscriptionPlanId Int?
}

model SubscriptionPlan {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  validity    Int
  createdAt   DateTime @default(now())
  User        User[]
}

model Education {
  id                     Int    @id @default(autoincrement())
  education_title        String
  education_college_name String
  education_duration     String
  education_location     String
  user                   User   @relation(fields: [userId], references: [id])
  userId                 Int    @unique
}

model Experience {
  id                 Int    @id @default(autoincrement())
  company_name       String
  designation        String
  duration           String
  location           String
  work_description_1 String
  work_description_2 String
  user               User   @relation(fields: [userId], references: [id])
  userId             Int    @unique
}

model Skill {
  id                         Int    @id @default(autoincrement())
  skill_name                 String
  skill_programming_language String
  skill_language             String
  skill_technical_skills     String
  skill_soft_skills          String
  skill_familiar_softwares   String
  user                       User   @relation(fields: [userId], references: [id])
  userId                     Int    @unique
}

model Project {
  id                   Int    @id @default(autoincrement())
  project_title        String
  project_techstack    String
  project_description  String
  project_deployed_url String
  project_github_url   String
  project_image        String
  user                 User   @relation(fields: [userId], references: [id])
  userId               Int    @unique
}

model BasicInfo {
  id                   Int    @id @default(autoincrement())
  info_first_name      String
  info_last_name       String
  info_social_github   String
  info_social_linkedin String
  info_designation     String
  info_intro           String
  info_email           String
  info_number          String
  info_city            String
  info_country         String
  user                 User   @relation(fields: [userId], references: [id])
  userId               Int    @unique
}

model Achievement {
  id            Int    @id @default(autoincrement())
  achievement_1 String
  achievement_2 String
  achievement_3 String
  achievement_4 String
  user          User   @relation(fields: [userId], references: [id])
  userId        Int    @unique
}
